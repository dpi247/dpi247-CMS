function dpicontext_permission() {
  return array (
    'administer dpicontext' => array (
      'title' => t ( 'Administer dpicontext' ),
      'description' => t ( 'Perform administration tasks for dpicontext module.' ) 
    ) 
  );
}

function dpicontext_ctools_plugin_directory($owner, $plugin_type) {
  if ($owner == 'ctools' && $plugin_type == 'access') {
    return 'plugins/' . $plugin_type;
  }
}

