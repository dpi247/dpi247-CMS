  $retour = "dpidestinations";
  if(is_array($arguments) && (isset($arguments[0])  && is_numeric($arguments[0])) && (isset($arguments[1])) && is_numeric($arguments[1])
        && isset($arguments[2])){
    $retour = $arguments[0].'_'.$arguments[1].'_'.$arguments[2];
  }
  return $retour;
}



