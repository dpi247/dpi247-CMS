function dpidestinations_tokens($type, $tokens, array $data = array(), array $options = array()) {
  $replacements = array();
  if ($type == 'node') {
    foreach ($tokens as $name => $original) {
      switch ($name) {
        case 'maindestid':
            $name = '';
            if(isset($data['node'])){
              $info = current(field_get_items('node', $data['node'], 'field_destinations'));
              $name = $info["tid"];
            }
            $replacements[$original] = $name;
          break;
        case 'pageType':
            $name = '';
            if(isset($data['node'])){
              $name = $data['node']->type;
            }
            $replacements[$original] = $name;
          break;
      }
    }
  }
  return $replacements;
}






