/**
 * 
 * @param unknown $owner
 * @param unknown $api
 * @return multitype:number string
 */
function dpiservices_ctools_plugin_api($owner, $api) {
  if ($owner == 'services' && $api == 'services') {
    return array(
      'version' => 3,
      'file' => 'dpiservices.services.inc',
    );
  }
}

