/**
 * Callback in ajax, send the form for the custom content
 *  @param $type_form
 *  type of form (version or custom content)
 */
function dpiextra_ajax_custom_contentform($type_form){

	module_load_include('inc', 'ctools','plugins/content_types/custom/custom');
	ctools_include('ajax');
	ctools_include('modal');
	ctools_modal_add_js();
	ctools_add_js('ajax-responder');

	//$commands = array();
	if ($type_form == 'custom'){
		$untype = 'version';
	} elseif ($type_form == 'version'){
		$untype = 'custom';
	}
	$commands = array();
	$commands[] = ctools_ajax_command_attr('#'.$untype.'_form', 'style', 'display:none;');
	$commands[] = ctools_ajax_command_attr('#'.$type_form.'_form', 'style', 'display:block;');
	
	//Display status, warning, error messages
	$commands[] = ajax_command_html('.messages', theme('status_messages'));

	
	$commands[] = ctools_ajax_command_attr('#'.$type_form, 'class', 'active');
	$commands[] = ctools_ajax_command_attr('#'.$untype, 'class', '');
	
	//ajax_render() replace ctools_ajax_render()
	print ajax_render($commands);
	exit;
}

